<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <include
        android:id="@+id/plugin_title"
        android:layout_height="50dip"
        android:layout_width="match_parent"
        layout="@layout/platform_mp_window_title_bar"
        />
    <WebView
        android:layout_below="@id/plugin_title"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <View
        android:id="@+id/main_div_line"
        android:layout_width="fill_parent"
        android:layout_height="0.000005dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dip"
        android:background="@color/border_color" />

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/platform_mp_window_chatkeyboard_bar"
        />
    <include
        android:layout_height="50dip"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        layout="@layout/platform_mp_window_menu_bar"
        />

</RelativeLayout>