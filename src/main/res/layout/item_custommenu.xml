<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/listview_item_bg_noborder"
    android:clickable="true"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_custommenu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:singleLine="true"
            android:text="23333333"
            android:textColor="@color/gray_black"
            android:textSize="14dip"
            />
        <ImageView
            android:id="@+id/icon_tab"
            android:layout_width="20dp"
            android:layout_height="20dp"
             android:background="@drawable/icon_black_three"
            android:layout_alignBottom="@id/tv_custommenu_name"
            android:layout_alignRight="@id/tv_custommenu_name"
            />
    </RelativeLayout>

    <View
        android:layout_width="0.05dip"
        android:layout_height="fill_parent"
        android:background="@color/border_color" />

</LinearLayout>